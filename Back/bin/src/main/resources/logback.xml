<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <property name="DEV_HOME" value="/home/fsbkatm/Documents/batchBack/log" />
        
       <!--  <property name="DEV_HOME" value="C:/LOGfRANS" /> -->
    
            <appender name="ROLLIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>${DEV_HOME}/backOffice%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd}}</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">

                    <!-- daily rollover -->
                    <fileNamePattern>${DEV_HOME}/backOffice%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd}}.log</fileNamePattern>

                </rollingPolicy>

                <encoder>
                    <pattern> %d{yyyy-MM-dd HH:mm:ss}  - %msg%n</pattern>
                </encoder>

            </appender>
    <root level="INFO">
        <appender-ref ref="ROLLIN" />
    </root>

    <logger name="com.mss.backOffice" level="INFO"/>



</configuration>